<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiChatAppdeux.Views.Templates.ChatRoomTemplate"
            >
    <ContentView.Content>
        <Border >
            <StackLayout  Orientation="Vertical" HeightRequest="60" Margin="8,0"  Padding="5">
                <Grid HorizontalOptions="StartAndExpand"  BackgroundColor="White">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Source="{Binding image}" WidthRequest="50" HeightRequest="50" />
                    <Label Grid.Column="1" TextColor="Black"  Text="{Binding name}" Margin="10, 0, 0, 0" Padding="0, 10, 0, 0" />
                </Grid>
            </StackLayout>
        </Border>
    </ContentView.Content>
</ContentView>