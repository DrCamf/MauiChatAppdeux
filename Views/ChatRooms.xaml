<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="MauiChatAppdeux.ChatRooms"
             xmlns:templates="clr-namespace:MauiChatAppdeux.Views.Templates"
             
            NavigationPage.HasNavigationBar="False"
             Title="ChatRooms">
    <StackLayout BackgroundColor="#1C375C" Margin="0,0,0,10">
        <Label 
            
            Text="Welcome to the Chat Rooms!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" TextColor="White" Margin="0,10,0,0"/>
       
        <CollectionView   ItemsSource="{Binding AreasCollection}" SelectionMode="Single" SelectedItem="{Binding SelectedArea}" SelectionChangedCommand="{Binding SelectedAreas}">
            <CollectionView.ItemTemplate>
                <DataTemplate >
                    <templates:ChatRoomTemplate/>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
       
    </StackLayout>
    
    
</ContentPage>